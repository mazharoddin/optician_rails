<%= simple_form_for [:inventory, @item], :html => { :class => "form-horizontal" } do |f| %>
	<div class="row">
		<div class="span6">
			<%= f.association :manufacturer %>
			<%= f.input :description %>
			<%= f.input :upc %>
			<%= f.association :supplier %>
			<%= f.input :supplier_code %>
			<%= f.input :active %>
			<%= f.input :track_inventory %>
		</div>
		<div class="span6">
			<%= f.input :cost_price %>
			<%= f.input :sugested_retail_price %>
			<%= f.input :regular_retail_price %>
			<%= f.input :current_retail_price %>
			<%= f.association :tax_class %>
			<%= f.input :stock_available %>
			<%= f.input :stock_reorder %>
		</div>
	</div>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @item.new_record? %>
		<%= link_to "Discard Changes", inventory_contacts_inventory_index_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", inventory_contacts_inventory_path(@item), :class => "btn" %>
<% end %>
	</div>
<% end %>