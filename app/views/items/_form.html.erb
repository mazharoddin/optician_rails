<%= simple_form_for [@invoice, @item], :html => { :class => "form-horizontal" } do |f| %>

	<%= f.input :description %>
	<%= f.input :unit_price %>
	<%= f.input :discount %>
	<%= f.association :tax_a %>
	<%= f.association :tax_b %>
	<%= f.input :qty %>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @item.new_record? %>
		<%= link_to "Discard Changes", invoices_path(@invoice), :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", invoice_item_path(@invoice, @item), :class => "btn" %>
<% end %>
	</div>
<% end %>