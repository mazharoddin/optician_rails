<%= simple_form_for [:admin, @tax], :html => { :class => "form-horizontal" } do |f| %>
	<%= f.input :name %>
	<%= f.input :amount %>
	<%= f.input :rate %>
	<%= f.input :active %>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @tax.new_record? %>
		<%= link_to "Discard Changes", admin_taxes_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", admin_tax_path(@tax), :class => "btn" %>
<% end %>
	</div>
<% end %>