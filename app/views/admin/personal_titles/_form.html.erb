<%= simple_form_for [:admin, @personal_title], :html => { :class => "form-horizontal" } do |f| %>
	<%= f.input :title %>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @personal_title.new_record? %>
		<%= link_to "Discard Changes", admin_personal_titles_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", admin_personal_title_path(@personal_title), :class => "btn" %>
<% end %>
	</div>
<% end %>