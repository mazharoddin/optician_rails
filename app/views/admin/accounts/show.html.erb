<% @title = "Show Accounts" %>
<div class="page-header">
	<h1><%= @account.name %> (Account)<% if can? :update, @account %><%= link_to "Edit Account", edit_admin_account_path(@current_account, @account), :class => "btn btn-primary pull-right" %><% end %></h1>
</div>


<dl class="dl-horizontal">
	<dt>Name</dt>
	<dd><%= @account.name %></dd>
	<dt>Subdomain</dt>
	<dd><%= @account.subdomain %></dd>
	<dt>Plan</dt>
	<dd><%= @account.plan %></dd>
	<dt>Active</dt>
	<dd><%= @account.active %></dd>
	<dt>Address</dt>
	<dd><%= @account.address %></dd>
	<dt>City</dt>
	<dd><%= @account.city %></dd>
	<dt>State</dt>
	<dd><%= @account.state %></dd>
	<dt>Postal Code</dt>
	<dd><%= @account.postal_code %></dd>
	<dt>Country</dt>
	<dd><%= @account.country %></dd>
	<dt>Phone</dt>
	<dd><%= @account.phone %></dd>
	<dt>Fax</dt>
	<dd><%= @account.fax %></dd>
	<dt>Url</dt>
	<dd><%= @account.url %></dd>
</dl>
