<% @title = "Show Accounts" %>
<div class="page-header">
	<h1><%= @account.name %> (Account)<% if can? :update, @account %><%= link_to "Edit Account", edit_admin_account_path(@current_account, @account), :class => "btn btn-primary pull-right" %><% end %></h1>
</div>

<div class="row">
	<div class="span6">
		<dl class="dl-horizontal">
			<dt>Name</dt>
			<dd><%= @account.name %></dd>
			<dt>Subdomain</dt>
			<dd><%= @account.subdomain %></dd>
			<dt>Plan</dt>
			<dd><%= @account.plan %></dd>
			<dt>Active</dt>
			<dd><%= @account.active %></dd>
			<dt>Address</dt>
			<dd><%= @account.address %></dd>
			<dt>City</dt>
			<dd><%= @account.city %></dd>
			<dt>State</dt>
			<dd><%= @account.state %></dd>
			<dt>Postal Code</dt>
			<dd><%= @account.postal_code %></dd>
			<dt>Country</dt>
			<dd><%= @account.country %></dd>
			<dt>Phone</dt>
			<dd><%= @account.phone %></dd>
			<dt>Fax</dt>
			<dd><%= @account.fax %></dd>
			<dt>Url</dt>
			<dd><%= @account.url %></dd>
		</dl>
	</div>
	<div class="span6">
		<dl class="dl-horizontal">
			<dt>Next Dispensing Number</dt>
			<dd><%= @account.next_dispensing_number %></dd>
			<dt>Next Inventory Number</dt>
			<dd><%= @account.next_inventory_number %></dd>
			<dt>Next Invoice Number</dt>
			<dd><%= @account.next_invoice_number %></dd>
			<dt>Next Patient Number</dt>
			<dd><%= @account.next_patient_number %></dd>
			<dt>Next Payment Number</dt>
			<dd><%= @account.next_payment_number %></dd>
		</dl>
	</div>
</div>