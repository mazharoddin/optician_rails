<%= simple_form_for [:admin, @account], :html => { :class => "form-horizontal" } do |f| %>
	<div class="row">
		<div class="span12">
			<%= f.input :name %>
			<%= f.input :subdomain %>
			<%= f.association :plan %>
			<%= f.input :active %>
			<%= f.input :address %>
			<%= f.input :city %>
			<%= f.input :postal_code %>
			<%= f.association :state %>
			<%= f.association :country %>
			<%= f.input :phone %>
			<%= f.input :fax %>
			<%= f.input :url %>
		</div>
	</div>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @account.new_record? %>
		<%= link_to "Discard Changes", admin_accounts_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", admin_account_path(@current_account, @account), :class => "btn" %>
<% end %>
	</div>
<% end %>