<% @title = "Accounts" %>
<div class="page-header">
	<h1>Find Account <%= link_to "New Account", new_admin_account_path, :class => "btn btn-success pull-right" %></h1>
</div>

<form class="well form-search" method="get">
	<input name="q" value="<%= params[:q] %>" type="text" class="search-query">
	<button type"submit" class="btn btn-info">Search</button>
</form>

<% if @accounts.empty? then %>
<p>No accounts found</p>
<% else %>
<table class="table table-condensed table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Subdomain</th>
		</tr>
	</thead>
	<tbody>
<% @accounts.each do |account| %>
		<tr>
			<td><%= link_to account.name, admin_account_path(account) %></td>
			<td><%= link_to account.subdomain, admin_account_path(account) %></td>
		</tr>
<% end %>
	</tbody>
</table>
<%= paginate @accounts %>
<% end %>