<%= simple_form_for [:admin, @gender], :html => { :class => "form-horizontal" } do |f| %>
	<%= f.input :name %>
	<%= f.input :active %>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @gender.new_record? %>
		<%= link_to "Discard Changes", admin_genders_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", admin_gender_path(@current_account, @gender), :class => "btn" %>
<% end %>
	</div>
<% end %>