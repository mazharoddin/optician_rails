<%= simple_form_for [:admin, @plan], :html => { :class => "form-horizontal" } do |f| %>
	<div class="row">
		<div class="span12">
			<%= f.input :name %>
			<%= f.input :inventory %>
			<%= f.input :multistore %>
			<%= f.input :price %>
		</div>
	</div>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @plan.new_record? %>
		<%= link_to "Discard Changes", admin_plans_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", admin_plan_path(@current_account, @plan), :class => "btn" %>
<% end %>
	</div>
<% end %>