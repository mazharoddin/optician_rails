<%= simple_form_for [:admin, @lens_type], :html => { :class => "form-horizontal" } do |f| %>
	<%= f.input :name %>
	<%= f.input :active %>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @lens_type.new_record? %>
		<%= link_to "Discard Changes", admin_lens_types_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", admin_lens_type_path(@lens_type), :class => "btn" %>
<% end %>
	</div>
<% end %>