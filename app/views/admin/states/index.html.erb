<% @title = "States" %>
<div class="page-header">
	<h1>Find State <%= link_to "New State", new_admin_country_state_path(@country), :class => "btn btn-success pull-right" %></h1>
</div>
<form class="well form-search">
	<input type="text" class="search-query">
	<button type"submit" class="btn btn-info">Search</button>
</form>
<% if @states.empty? then %>
<p>No states found</p>
<% else %>
<table class="table table-condensed table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Short Name</th>
		</tr>
	</thead>
	<tbody>
<% @states.each do |state| %>
		<tr>
			<td><%= link_to state.name, admin_country_state_path(@country, state) %></td>
			<td><%= link_to state.short_name, admin_country_state_path(@country, state) %></td>
		</tr>
<% end %>
	</tbody>
</table>
<%= paginate @states %>
<% end %>