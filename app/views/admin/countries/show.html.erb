<% @title = "Show Country" %>

<div class="page-header">
	<h1><%= @country.name %> (Country) <%= link_to "Edit Country", edit_admin_country_path(@country), :class => "btn btn-primary pull-right" %></h1>
</div>


<dl class="dl-horizontal">
	<dt>Name</dt>
	<dd><%= @country.name %></dd>
	<dt>Enabled</dt>
	<dd><%= @country.enabled %></dd>
</dl>

<h2>States <%= link_to "New State", new_admin_country_state_path(@country), :class => "btn btn-success pull-right" %></h2>
<% if @country.states.empty? then %>
<p>No states found</p>
<% else %>
<table class="table table-condensed table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Short Name</th>
		</tr>
	</thead>
	<tbody>
<% @states.each do |state| %>
		<tr>
			<td><%= link_to state.name, admin_country_state_path(@country, state) %></td>
			<td><%= link_to state.short_name, admin_country_state_path(@country, state) %></td>
		</tr>
<% end %>
	</tbody>
</table>
<%= paginate @states %>
<% end %>