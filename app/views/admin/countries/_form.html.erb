<%= simple_form_for [:admin, @country], :html => { :class => "form-horizontal" } do |f| %>
	<%= f.input :name %>
	<%= f.input :active %>
	
	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @country.new_record? %>
		<%= link_to "Discard Changes", admin_countries_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", admin_country_path(@current_account, @country), :class => "btn" %>
<% end %>
	</div>
<% end %>