<%= simple_form_for [:admin, @brand], :html => { :class => "form-horizontal" } do |f| %>
	<%= f.input :name %>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @brand.new_record? %>
		<%= link_to "Discard Changes", admin_brands_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", admin_brand_path(@brand), :class => "btn" %>
<% end %>
	</div>
<% end %>