<% @title = "Brands" %>
<div class="page-header">
	<h1>Find Brands <%= link_to "New Brand", new_admin_brand_path, :class => "btn btn-success pull-right" %></h1>
</div>
<form class="well form-search">
	<input type="text" class="search-query">
	<button type"submit" class="btn btn-info">Search</button>
</form>

<% if @brands.empty? then %>
<p>No brands found</p>
<% else %>
<table class="table table-condensed table-striped">
	<thead>
		<tr>
			<th>Brand</th>
		</tr>
	</thead>
	<tbody>
<% @brands.each do |brand| %>
		<tr>
			<td><%= link_to brand.name, admin_brand_path(brand) %></td>
		</tr>
<% end %>
	</tbody>
</table>
<%= paginate @brands %>
<% end %>