<%= simple_form_for [:admin, @lens_material], :html => { :class => "form-horizontal" } do |f| %>
	<%= f.input :name %>
	<%= f.input :active %>

	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @lens_material.new_record? %>
		<%= link_to "Discard Changes", admin_lens_materials_path, :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", admin_lens_material_path(@lens_material), :class => "btn" %>
<% end %>
	</div>
<% end %>