<%= form_for [:admin, @employee] do |f| %>

	<div class="control-group">
		<%= f.label :title, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :title, :class => "span3" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :first_name, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :first_name, :class => "span3" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :last_name, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :last_name, :class => "span3" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :preferred_name, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :preferred_name, :class => "span3" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :email, :class => "control-label" %>
		<div class="controls">
			<%= f.text_field :email, :class => "span3" %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :password, :class => "control-label" %>
		<div class="controls">
			<%= f.password_field :password %>
		</div>
	</div>
	<div class="control-group">
		<%= f.label :password_confirmation, :class => "control-label" %>
		<div class="controls">
			<%= f.password_field :password_confirmation %>
		</div>
	</div>
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">Save Changes</button>
		<button class="btn">Discard Changes</button>
	</div>

<% end %>