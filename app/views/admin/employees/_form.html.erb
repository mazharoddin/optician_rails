<%= simple_form_for [:admin, @employee], :html => { :class => "form-horizontal" } do |f| %>
	<%= f.input :title %>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
	<%= f.input :preferred_name %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.button :submit, :class => "btn btn-primary" %>
<% end %>