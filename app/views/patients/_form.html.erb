<% else %>
<ul class="nav nav-tabs">
	<li class="active"><%= link_to "Profile", edit_patient_path(@patient) %></li>
	<li><a href="patients_medical.html">Medical</a></li>
	<li><a href="patients_glasses.html">Glasses</a></li>
	<li><a href="patients_contacts.html">Contacts</a></li>
