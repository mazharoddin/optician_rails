<%= simple_form_for @registration, :as => 'registration', :url => registration_path, :html => { :class => "form-horizontal" } do |f| %>
    <p>Your one step away from being set up. We just need a few details to get you started</p>

	<h2>About Your Business</h2>
	<p>These will be used to create your account</p>
	<%= f.input :business_name %>
	<%= f.input :address %>
	<%= f.input :city %>
	<%= f.input :postal_code %>
	<%= f.input :state_id, :collection => State.all %>
	<%= f.input :country_id, :collection => Country.all %>
	<%= f.input :url %>
	<%= f.input :subdomain %>
	
	<h2>About You</h2>
	<p>These will be used to create your intial login</p>
    <%= f.input :first_name %>
	<%= f.input :last_name %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>



	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
	</div>
<% end %>