<ul class="nav nav-tabs">
	<li><%= link_to "Profile", edit_patient_path(@patient) %></li>
	<li class="active"><%= link_to "Glasses", current_patient_glasses_prescriptions_path(@patient) %></li>
	<li><%= link_to "Contacts", patient_contacts_prescriptions_path(@patient, @contacts_prescription) %></li>
	<li><a href="patients_dispensing.html">Dispensing</a></li>
	<li><a href="patients_appointments.html">Appointments</a></li>
	<li><a href="patients_sales.html">Sales</a></li>
</ul>

<div class="btn-toolbar">
	<div class="btn-group">
		<%= link_to "History", patient_glasses_prescriptions_path(@patient), :class => "btn" %>
<% if @glasses_prescription.new_record? %>
		<%= link_to "New Prescription", new_patient_glasses_prescription_path(@patient, @glasses_prescription), :class => "btn btn-primary" %>
<% else %>
		<%= link_to @glasses_prescription.rx_date, edit_patient_glasses_prescription_path(@patient, @glasses_prescription), :class => "btn btn-primary" %>
<% end %>
	</div>
	<div class="btn-group pull-right">
		<%= link_to "New Prescription", :new_patient_glasses_prescription, :class => "btn btn-success" %>
	</div>
</div>

<%= simple_form_for [@patient, @glasses_prescription], :html => { :class => "form-horizontal" } do |f| %>
	<%= f.input :description %>
	<%= f.input :expiry_date %>
	<%= f.input :rx_date %>
	<%= f.association :optometrist %>
	<%= f.input :notes, :input_html => { :class => 'input-xxlarge', :rows => 5 } %>

	<table class="table table-condensed">
		<thead>
			<tr>
				<th>&nbsp;</th>
				<th>Sphere</th>
				<th>Cylinder</th>
				<th>Axis</th>
				<th>Add</th>
				<th>Prism</th>
				<th>Base</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th rowspan="2">OD</th>
				<td rowspan="2"><%= f.input_field :od_sphere, :collection => (-30..30).step(0.25).reverse(), :class => 'input-small' %></td>
				<td rowspan="2"><%= f.input_field :od_cylinder, :collection => (-30..30).step(0.25).reverse(), :class => 'input-small' %></td>
				<td rowspan="2"><%= f.input_field :od_axis, :collection => (0..180), :class => 'input-small' %></td>
				<td rowspan="2"><%= f.input_field :od_add, :collection => (0..5).step(0.25).reverse(), :class => 'input-small' %></td>
				<td><%= f.input_field :od_prism1, :class => 'input-small' %></td>
				<td><%= f.input_field :od_base1, :collection => ['Up', 'Down'], :class => 'input-small' %></td>
			</tr>
			<tr>
				<td><%= f.input_field :od_prism2, :class => 'input-small' %></td>
				<td><%= f.input_field :od_base2, :collection => ['Up', 'Down'], :class => 'input-small' %></td>
			</tr>
			<tr>
				<th rowspan="2">OS</th>
				<td rowspan="2"><%= f.input_field :os_sphere, :collection => (-30..30).step(0.25).reverse(), :class => 'input-small' %></td>
				<td rowspan="2"><%= f.input_field :os_cylinder, :collection => (-30..30).step(0.25).reverse(), :class => 'input-small' %></td>
				<td rowspan="2"><%= f.input_field :os_axis, :collection => (0..180), :class => 'input-small' %></td>
				<td rowspan="2"><%= f.input_field :os_add, :collection => (0..5).step(0.25).reverse(), :class => 'input-small' %></td>
				<td><%= f.input_field :os_prism1, :class => 'input-small' %></td>
				<td><%= f.input_field :os_base1, :collection => ['Up', 'Down'], :class => 'input-small' %></td>
			</tr>
			<tr>
				<td><%= f.input_field :os_prism2, :class => 'input-small' %></td>
				<td><%= f.input_field :os_base2, :collection => ['Up', 'Down'], :class => 'input-small' %></td>
			</tr>
		</tbody>
	</table>


	<div class="form-actions">
		<%= f.button :submit, :class => "btn btn-primary" %>
<% if @glasses_prescription.new_record? %>
		<%= link_to "Discard Changes", patient_glasses_prescriptions_path(@patient), :class => "btn" %>
<% else %>
		<%= link_to "Discard Changes", patient_path(@patient), :class => "btn" %>
<% end %>
	</div>
<% end %>